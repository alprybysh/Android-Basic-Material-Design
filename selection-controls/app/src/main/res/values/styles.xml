<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorAccent">@color/colorSwitch</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="colorAccent">@color/colorCheckEnable</item>
        <item name="colorControlNormal">@color/colorCheckDisable</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="colorAccent">@color/colorSelectRadioButtonEnable</item>
        <item name="colorControlNormal">@color/colorSelectRadioButtonDisable</item>
    </style>

</resources>
